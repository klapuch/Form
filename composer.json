{
	"name": "klapuch/form",
	"description": "Highly customizable forms in multiple formats",
	"type": "library",
	"homepage": "https://www.github.com/klapuch/Form",
	"authors": [
		{
			"name": "Dominik Klapuch",
			"email": "klapuchdominik@gmail.com",
			"homepage": "https://www.github.com/klapuch",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.1",
		"klapuch/markup": "^1.0.0",
		"klapuch/csrf": "^1.0.0"
	},
	"require-dev": {
		"nette/tester": "^1.7",
		"mockery/mockery": "^0.9.6",
		"object-calisthenics/phpcs-calisthenics-rules": "^2.0",
		"sebastian/phpcpd": "^2.0",
		"phpstan/phpstan": "^0.4.0"
	},
	"autoload": {
		"psr-4": {
			"Klapuch\\Form\\": [
				"Core/"
			]
		}
	},
	"scripts": {
		"phpcs": "phpcs Core --standard=ruleset.xml -p",
		"phpstan": "phpstan analyze -l 4 -c phpstan.neon Core Tests",
		"phpcpd": "phpcpd Core",
		"test": "tester -o console -s -p php-cgi -c Tests/php.ini Tests/",
		"bfc": [
			"@composer update",
			"@phpstan",
			"@phpcs",
			"@phpcpd",
			"@test"
		]
	}
}
